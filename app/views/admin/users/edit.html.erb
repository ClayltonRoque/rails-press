<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing user</h1>
  <div class="card mt-6">
    <div class="text-3xl">alterar dados do usuário</div>
    <%= render "form", user: @user %>
  </div>
  <div class="card mt-6">
    <div class="text-3xl">alterar senha do usuário</div>
    <%= render "form_password", user: @user %>
  </div>
  <%= link_to "Show this user", admin_user_path(@user), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <%= link_to "Back to users", admin_users_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
