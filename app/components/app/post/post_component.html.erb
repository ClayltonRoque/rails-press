<div class="prose prose-lg gutten-post">
    <p class="text-4xl my-5">
        <%= @post.title %>
    </p>
      <% if @post.media.persisted? %>
    <figure class="flex justify-center">
      <%= image_tag @post.media.variant(:medium), class: 'object-cover rounded-lg w-full h-96' %>
    </figure>
  <% end %>
    <p class="my-5">
        <%= @post.body %>
    </p>
</div>
